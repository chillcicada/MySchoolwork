{
  "name": "@cc/schoolwork",
  "displayName": "Schoolwork by chillcicada",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "chillcicada's schoolwork",
  "author": "chillcicada",
  "license": "MIT",
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npx simple-git-hooks",
    "clean": "rimraf -g **/build/"
  },
  "dependencies": {
    "vue": "3.5.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.3.0",
    "@shikijs/vitepress-twoslash": "2.5.0",
    "@types/node": "22.13.5",
    "eslint": "9.21.0",
    "eslint-plugin-format": "1.0.1",
    "lint-staged": "15.4.3",
    "markdown-it-mathjax3": "4.3.2",
    "prettier-plugin-slidev": "1.0.5",
    "rimraf": "6.0.1",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.3",
    "vitepress": "1.6.3",
    "vue-tsc": "2.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "docs/.vitepress/*": "eslint --fix",
    "*.{py,ipynb}": [
      "ruff check --fix",
      "ruff format"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "playwright-chromium",
      "simple-git-hooks",
      "vue-demi"
    ]
  }
}
