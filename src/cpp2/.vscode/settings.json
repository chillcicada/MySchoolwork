{
  "prettier.enable": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.associations": {
    "*.F90": "FortranFreeForm",
    "string": "cpp",
    "iostream": "cpp"
  },
  "files.autoSave": "onFocusChange",
  "cSpell.enabled": false,
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
    "**/.venv": false
  },
  "explorerExclude.backup": {},
  "clangd.arguments": ["--compile-commands-dir=.vscode"]
}
